<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pharmacyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="74dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/pharmacyName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Pharmacy Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.251"
        app:layout_constraintStart_toEndOf="@+id/pharmacyImage"
        app:layout_constraintTop_toTopOf="@+id/pharmacyImage" />

    <TextView
        android:id="@+id/pharmacyPhone"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pharmacy Phone"
        app:layout_constraintEnd_toEndOf="@+id/pharmacyName"
        app:layout_constraintStart_toStartOf="@+id/pharmacyName"
        app:layout_constraintTop_toBottomOf="@+id/pharmacyName" />

    <TextView
        android:id="@+id/pharmacyAddress"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="Pharmacy Address"
        app:layout_constraintEnd_toEndOf="@+id/pharmacyPhone"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/pharmacyPhone"
        app:layout_constraintTop_toBottomOf="@+id/pharmacyPhone" />
</androidx.constraintlayout.widget.ConstraintLayout>